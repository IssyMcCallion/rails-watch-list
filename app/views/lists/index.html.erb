<h1> Watch-List!</h1>
  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %></li>
      <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-delete-left"></i>
      <% end %>
    <% end %>
  </ul>
  <%= link_to 'Create a new category', new_list_path(@list) %>
